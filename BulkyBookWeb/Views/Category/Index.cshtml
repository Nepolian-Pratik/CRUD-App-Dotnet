@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Categories</h1>
            </div>
        <div class="col-6 text-end">
            <a href="@Url.Action("Create", "Category")" class="btn btn-primary float-right"> <i class="bi bi-plus-circle"></i> &nbsp;  Create New Category</a>
    </div></div>
</div> <br /><br /><br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Operations
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group">
                            <a href="@Url.Action("Edit", "Category", new { id = obj.Id })" class="btn btn-primary mx-2"> <i class="bi bi-pencil"></i> &nbsp; Edit</a>
                            <a href="@Url.Action("Delete", "Category", new { id = obj.Id })" class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> &nbsp; Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

